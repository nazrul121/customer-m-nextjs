generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}


model User {
  id            String    @id
  name          String    @db.Text
  email         String
  emailVerified Boolean   @default(false)
  phoneNumber         String?
  phoneNumberVerified Boolean   @default(false)
  image         String?   @db.Text
  role          String   @default("user")

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]

  @@unique([email])
  @@unique([phoneNumber])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?  @db.Text
  userAgent String?  @db.Text
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId(length: 191)])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String    @db.Text
  providerId            String    @db.Text
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  idToken               String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?   @db.Text
  password              String?   @db.Text
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId(length: 191)])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String   @db.Text
  value      String   @db.Text
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier(length: 191)])
  @@map("verification")
}



// --- BUSINESS LOGIC MODELS ---

model ServiceType {
  id          String @id @default(cuid())
  title       String
  description String @db.Text

  services Service[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id   String @id @default(cuid())
  name String

  initCost Decimal @db.Decimal(10, 2)
  mmc      Decimal @db.Decimal(10, 2)

  serviceTypeId String
  serviceType   ServiceType @relation(fields: [serviceTypeId], references: [id], onDelete: Cascade)

  customerLinks CustomerService[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([serviceTypeId])
}

model Customer {
  id           String @id @default(cuid())
  customerCode String @unique
  name         String
  phone        String @unique
  email        String @unique
  photo        String @default("/public/image/profile.png")
  aggrePaper   String
  status       Status @default(INACTIVE)

  services CustomerService[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CustomerService {
  id String @id @default(cuid())

  customerId String
  serviceId  String

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  service  Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  initCost Decimal @db.Decimal(10, 2)
  mmc      Decimal @db.Decimal(10, 2)

  initCostDis Decimal @db.Decimal(10, 2)
  mmcDis      Decimal @db.Decimal(10, 2)

  startDate  DateTime @db.Date
  expiryDate DateTime @db.Date
  isRepeat   YesNo    @default(NO)

  bills MonthlyBill[]
  setupBills SetupBill[]
  generalLedgers GeneralLedger[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([customerId])
  @@index([serviceId])
  @@unique([customerId, serviceId])

}

model MonthlyBill {
  id String @id @default(cuid())

  customerServiceId String
  customerService   CustomerService @relation(fields: [customerServiceId], references: [id], onDelete: Cascade)

  monthFor   String
  mmc        Decimal   @db.Decimal(10, 2)
  paidAmount Decimal   @default(0) @db.Decimal(10, 2)
  paidDate   DateTime? @db.Date
  receivedBy String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([customerServiceId])
}

model SetupBill {
  id String @id @default(cuid())

  customerServiceId String
  customerService   CustomerService @relation(fields: [customerServiceId], references: [id], onDelete: Cascade)

  paidAmount Decimal   @default(0) @db.Decimal(10, 2)
  paidDate   DateTime? @db.Date
  receivedBy String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([customerServiceId])
}

model GeneralLedger {
  id String @id @default(cuid())

  customerServiceId String
  customerService   CustomerService @relation(fields: [customerServiceId], references: [id], onDelete: Cascade)

  purpose  PaymentFor 
  voucherNo   String
 
  paidAmount Decimal   @default(0) @db.Decimal(10, 2)
  paidDate   DateTime? @db.Date
  receivedBy String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([customerServiceId])
}

enum Status {
  INACTIVE
  ACTIVE
}

enum YesNo {
  NO
  YES
}

enum PaymentFor {
  MonthlyBill
  SetupBill
}
